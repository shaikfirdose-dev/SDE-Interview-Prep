
aT.C:O(N)
S.C:O(N)

class Solution {
    public String reversePrefix(String word, char ch) {
        int n = word.length();
        char[] charArr = word.toCharArray();
        int i =0;
        int j=0;

        while(j<n){
            if(charArr[j]==ch){
                reverse(charArr, i,j);
                break;
            }
            j++;
        }

        return String.valueOf(charArr);
    }

    private void reverse(char[] charArr, int st, int end){
        while(st<end){
            char c = charArr[st];
            charArr[st] = charArr[end];
            charArr[end] = c;
            st++;
            end--;
        }
        return;
    }
}
