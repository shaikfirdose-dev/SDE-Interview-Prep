
#input: [4,2,5,7]
#output: [4,5,2,7]

class Solution {
    public int[] sortArrayByParityII(int[] nums) {
        int n = nums.length;
        int[] ans = new int[n];
        int ev = 0;
        int odd = 1;
        for(int i=0;i<n;i++){
            if(nums[i]%2==0){
                ans[ev] = nums[i];
                ev = ev+2;
            }
            else{
                ans[odd] = nums[i];
                odd = odd+2;
            }
        }

        return ans;
    }
}
